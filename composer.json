# Composer Configuration for PHP Native Dashboard

{
    "name": "php-native-dashboard/security-testing",
    "description": "PHP Native Dashboard with Security Testing",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "semgrep/semgrep": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyze": "phpstan analyse",
        "analyze-baseline": "phpstan analyse --generate-baseline",
        "security-check": "semgrep --config=auto --severity=ERROR,WARNING .",
        "test": "phpstan analyse && semgrep --config=auto ."
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}